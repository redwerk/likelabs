<table cellpadding="0" cellspacing="1" style="width: 100%; border: solid 1px #d2d9df" summary="" class="content_table">
    <thead style="height: 30px;">
        <tr style="background-color: #efefef">
            <th>Logo</th>
            <th>Name</th>
            <th>Points</th>
            <th>Reviews</th>
        </tr>
    </thead>
<% 
    for (var key=0; key<companies.length;key++) {
        var company = companies[key];
%>
    <tr style="background-color: #<%= key % 2 == 0? 'fdfeff' : 'efefef' %>">
            <td width="60"><img src="/public/<%= company.id %>/logo" style="max-width: 120px; max-height: 32px" alt="logo"/></td>
        <td><a href="/company/<%= company.id %>"><%= company.name %></a></td>
        <td><a href="/public/<%= company.id %>/points"><%= company.points %></a></td>
        <td><a href="/public/<%= company.id %>/reviews"><%= company.comments %></a></td>
    </tr>
<% 
    }
%>
</table>