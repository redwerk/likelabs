<table cellpadding="0" cellspacing="1" style="width: 100%; border: solid 1px #d2d9df;" summary="" class="content_table">
    <thead style="height: 30px;">
        <tr style="background-color: #efefef">
            <th>Logo</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
<% 
    for (var key=0; key<companies.length;key++) {
        var company = companies[key];
%>
    <tr style="background-color: #<%= key % 2 == 0? 'fdfeff' : 'efefef' %>">
            <td width="60"><img src="/public/<%= company.id %>/logo" style="max-width: 120px; max-height: 32px" alt="logo"/></td>
        <td><%= company.name %></td>
        <td><%= company.email %></td>
        <td><%= company.phone %></td>
        <td>
            <a href="/company/<%=company.id%>"><img src="/static/images/profile_icon.png" width="16" height="16" title="Company cabinet" alt="Company cabinet"/></a>
            <a href="javascript:void(0);" onclick="deleteCompany(<%= company.id %>);"><img src="/static/images/delete.png" title="Delete" alt="Delete"/></a>
        </td>
    </tr>
<% 
    }
%>
</table>
